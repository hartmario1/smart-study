{
  "$schema": "http://json.schemastore.org/package",
  "name": "@gaius-bot/readdir",
  "description": "Fast, dependency-less, stream-based recursive directory reads",
  "private": false,
  "version": "1.0.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./types/index.d.ts",
  "files": [
    "dist",
    "types",
    "!dist/*.tsbuildinfo",
    "!**/**.map",
    "!**/*.test.*"
  ],
  "scripts": {
    "lint": "eslint src --ext .ts",
    "build": "tsc",
    "test": "jest",
    "test:ci": "jest --ci --no-stack-trace --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GaiusCicereius/readdir.git"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.21.0",
    "eslint-config-marine": "^8.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "tslib": "^2.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
